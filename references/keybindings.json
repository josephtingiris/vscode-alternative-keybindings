/*
keyboard grammar in this User's keybindings.json file override the defaults

Conventions: 
  * treat 'up' or 'k' or 'right' or 'l' as 'next'
  * treat 'down' or 'j' or 'left' or 'h' as 'previous'
  * if there is a commented command in an object:
    - if it is ABOVE the active command:, then it is a potential future command that i have not yet implemented
    - if it is BELOW the active command:, then it is an old command that has been replaced but left for reference
  * 'command not found' command: placeholders:
    - are left in to help with debugging, sorting, and future key binding placements
    - should contain the key and a 4-character UNIQUE identifier, i.e. 'alt+l jj4e' or 'alt+l 8df3'

Notes:
  * my primary editor is [neo]vim, so this keyboard grammar is designed to work well with and without the vscode-neovim extension
  * i try (hard) to avoid conflicts with default bindings and commoon extensions, however some conflicts are unavoidable and can be noted
  * i still need to test compatibility with other extensions, particularly vim emulation extensions
  * i'm aware of numerous conflicts with the vs code multiple cursor feature, and will circle back to resolve them later (once I learn to use it better)
*/
[
  {
    "key": "alt+'",
    "command": "cursorEnd",
    "when": "textInputFocus"
  },
  {
    "key": "alt+,",
    "command": "workbench.action.navigateBack"
  },

  {
    // (-) split editor horizontally when in editor
    "key": "alt+-",
    "command": "workbench.action.splitEditorDown",
    "when": "editorFocus"
  },
  {
    "key": "alt+.",
    "command": "workbench.action.navigateForward"
  },
  {
    "key": "alt+/",
    "command": "editor.action.previousMatchFindAction",
    "when": "editorFocus"
  },
  {
    "key": "alt+;",
    "command": "cursorHome",
    "when": "textInputFocus"
  },
  {
    // (=) split editor vertically (editorFocus)
    "key": "alt+=",
    "command": "workbench.action.splitEditor",
    "when": "editorFocus"
  },
  {
    // (=) split terminal vertically (terminalFocus)
    "key": "alt+=",
    "command": "workbench.action.terminal.split",
    "when": "panelFocus && terminalFocus"
  },
  {
    "key": "alt+[",
    "command": "cursorMove",
    "args": {
      "to": "prevBlankLine"
    },
    "when": "textInputFocus"
  },
  {
    "key": "alt+]",
    "command": "cursorMove",
    "args": {
      "to": "nextBlankLine"
    },
    "when": "textInputFocus"
  },
  {
    // (a z) toggle zen mode
    "key": "alt+a z",
    "command": "workbench.action.toggleZenMode"
  },
  {
    // (a z) toggle maximized panel (panelFocus)
    "key": "alt+a z",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "panelFocus"
  },
  {
    "key": "alt+b",
    "command": "cursorWordStartLeft",
    "when": "textInputFocus"
  },
  {
    // (a alt+d) [debug] inspect context keys
    "key": "alt+d alt+i",
    "command": "workbench.action.inspectContextKeys"
  },
  {
    // (a alt+k) [debug] toggle keybinding logging to the debug console
    "key": "alt+d alt+k",
    "command": "workbench.action.toggleKeybindingsLog"
  },
  {
    // (down) when the primary sidebar is on the left then focus previous part [default]
    "key": "alt+down",
    "command": "workbench.action.focusPreviousPart",
    "when": "config.workbench.sideBar.location == 'left'"
  },
  {
    "key": "alt+down",
    "command": "cursorPageDown",
    "when": "textInputFocus"
  },
  {
    // (down) when the primary sidebar is on the left and focus is in the secondary sidebar then go to the primary sidebar
    "key": "alt+down",
    "command": "workbench.action.focusSideBar",
    "when": "config.workbench.sideBar.location == 'left' && auxiliaryBarFocus && auxiliaryBarVisible"
  },
  {
    // (down) [top left] focus previous editor (first in group) (editorFocus)
    "key": "alt+down",
    "command": "alt+down editor.focus.down 1.1 a",
    "when": "editorFocus && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    // (down) [top last] focus previous editor (last in group) (editorFocus)
    "key": "alt+down",
    "command": "alt+down editor.focus.down 1.2 a",
    //"command": "workbench.action.focusFirstEditorGroup",
    "when": "editorFocus && activeEditorGroupIndex == 1 && activeEditorIsLastInGroup"
  },
  {
    // (down) focus previous editor (across groups) (editorFocus)
    "key": "alt+down",
    "command": "alt+down editor.focus.down 2 a",
    "when": "editorFocus && activeEditorGroupIndex > 1 && multipleEditorGroups"
  },
  {
    // (down) when the panel is on the bottom, the focus is in the terminal, and there are multiple terminals then focus the previous terminal pane
    "key": "alt+down",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "panelPosition == 'bottom' && terminalFocus && terminalCount > 1"
  },
  {
    // (down) focus previous editor (last in group, multiple groups) (editorFocus)
    "key": "alt+down",
    "command": "editor.focus.down 1.3 a",
    //"command": "workbench.action.focusFirstEditorGroup",
    "when": "editorFocus && activeEditorGroupIndex == 1 && activeEditorIsLastInGroup && multipleEditorGroups"
  },
  {
    // (down) focus previous editor (group last) (editorFocus)
    "key": "alt+down",
    "command": "editor.focus.down 3 a",
    //"command": "workbench.action.focusFirstEditorGroup",
    "when": "editorFocus && activeEditorGroupIndex > 1 && activeEditorGroupLast && multipleEditorGroups"
  },
  {
    // (down) focus previous editor (across groups, first in group) (editorFocus)
    "key": "alt+down",
    "command": "editor.focus.down 2.1 a",
    //"command": "workbench.action.focusBelowGroup",
    "when": "editorFocus && activeEditorGroupIndex > 1 && activeEditorIsFirstInGroup && multipleEditorGroups"
  },
  {
    // (down) focus previous editor (across groups, last in group) (editorFocus)
    "key": "alt+down",
    "command": "editor.focus.down 2.1 a",
    "when": "editorFocus && activeEditorGroupIndex > 1 && activeEditorIsLastInGroup && multipleEditorGroups"
  },
  {
    // (down) [single row]
    "key": "alt+down",
    "command": "workbench.action.focusPanel",
    "when": "panelPosition == 'bottom' && editorFocus && panelVisible && !multipleEditorGroups"
  },
  {
    // (down) focus previous editor or panel (panelVisible) (editorFocus)
    "key": "alt+down",
    "command": "editor.focus.down 4 a",
    //"command": "workbench.action.focusPanel",
    "when": "editorFocus && panelVisible && activeEditorGroupIndex > 1 && activeEditorGroupLast && multipleEditorGroups"
  },
  {
    // (down) [top left]
    "key": "alt+down",
    "command": "workbench.action.focusPanel",
    "when": "panelPosition == 'bottom' && panelVisible && !multipleEditorGroups && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    // (down) [top left]
    "key": "alt+down",
    "command": "workbench.action.focusPanel",
    "when": "panelPosition == 'bottom' && editorFocus && panelVisible && !multipleEditorGroups && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    // (left) when the primary sidebar is on the left then focus previous part
    "key": "alt+h",
    "command": "workbench.action.focusPreviousPart",
    "when": "config.workbench.sideBar.location == 'left'"
  },
  {
    // (left) when editor is focused then go to previous editor
    "key": "alt+h",
    "command": "workbench.action.previousEditor 1",
    "when": "editorFocus"
  },
  {
    // (left) in panel
    "key": "alt+h",
    "command": "alt+h workbench.action.previousPanelView 1",
    "when": "panelFocus"
  },
  {
    "key": "alt+h",
    "command": "cursorLeft",
    "when": "textInputFocus"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.previousEditor",
    "when": "activeEditor =~ '/^workbench.editor.settings/' && editorFocus"
  },
  {
    // (left) when the primary sidebar is on the left and focus is in the secondary sidebar then focus the active editor
    "key": "alt+h",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "config.workbench.sideBar.location == 'left' && auxiliaryBarFocus"
  },
  {
    // (left) when the primary sidebar is on the left, the focus is in the primary sidebar, and the secondary sidebar is visible then go to the secondary sidebar
    "key": "alt+h",
    "command": "workbench.action.focusAuxiliaryBar",
    "when": "config.workbench.sideBar.location == 'left' && sideBarFocus && auxiliaryBarVisible"
  },
  {
    // (left) when the primary sidebar is on the left, the Problems panel is focused, and the primary sidebar is visible then go to the primary sidebar
    "key": "alt+h",
    "command": "workbench.action.focusSideBar",
    "when": "config.workbench.sideBar.location == 'left' && panelFocus && sideBarVisible && activePanel == 'workbench.panel.markers'"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "panelFocus && terminalFocus && terminalCount > 1 && terminalSplitPaneActive"
  },
  {
    // (left) [top left]
    "key": "alt+h",
    "command": "workbench.action.focusSideBar",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && sideBarVisible && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    "key": "alt+home",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    // (down) when the primary sidebar is on the left then focus previous part
    "key": "alt+j",
    "command": "workbench.action.focusPreviousPart",
    "when": "config.workbench.sideBar.location == 'left'"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "alt+j",
    "command": "cursorDown",
    "when": "textInputFocus"
  },
  {
    // (down) [default] when panel is positioned and focused on the bottom then do not go down any further
    "key": "alt+j",
    "command": "noop",
    "when": "panelPosition == 'bottom' && panelFocus"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "unk 2",
    "when": "panelPosition == 'bottom' && terminalFocus"
  },
  {
    // (down) when the primary sidebar is on the left and focus is in the secondary sidebar then go to the primary sidebar
    "key": "alt+j",
    "command": "workbench.action.focusPanel",
    "when": "config.workbench.sideBar.location == 'left' && auxiliaryBarFocus && panelVisible"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "workbench.action.focusPreviousPart",
    //"command": "editor.focus.down 1",
    //"command": "terminal.focus",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex == 1"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "unk 3",
    "when": "config.workbench.sideBar.location == 'left' && panelPosition == 'bottom' && terminalFocus"
  },
  {
    "key": "alt+j",
    "command": "unk 4",
    //"command": "workbench.action.terminal.focusPrevious",
    "when": "config.workbench.sideBar.location == 'left' && terminalFocus && terminalCount > 1"
  },
  {
    // (down) when the panel is on the bottom, the focus is in the terminal, and there are multiple terminals then focus the previous terminal pane
    "key": "alt+j",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "panelPosition == 'bottom' && terminalFocus && terminalCount > 1"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 1.2",
    //"command": "workbench.action.focusFirstEditorGroup",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex == 1 && activeEditorIsLastInGroup"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 2",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex > 1 && multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 1.1",
    "when": "panelPosition == 'bottom' && editorFocus && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    // (down) [single row]
    "key": "alt+j",
    "command": "workbench.action.focusPanel",
    "when": "panelPosition == 'bottom' && editorFocus && panelVisible && !multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 1.3",
    //"command": "workbench.action.focusFirstEditorGroup",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex == 1 && activeEditorIsLastInGroup && multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 3",
    //"command": "workbench.action.focusFirstEditorGroup",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex > 1 && activeEditorGroupLast && multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 2.1",
    //"command": "workbench.action.focusBelowGroup",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex > 1 && activeEditorIsFirstInGroup && multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 2.1",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorGroupIndex > 1 && activeEditorIsLastInGroup && multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "editor.focus.down 4",
    //"command": "workbench.action.focusPanel",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && panelVisible && activeEditorGroupIndex > 1 && activeEditorGroupLast && multipleEditorGroups"
  },
  {
    // (down)
    "key": "alt+j",
    "command": "workbench.action.focusPanel",
    "when": "panelPosition == 'bottom' && editorFocus && panelVisible && !multipleEditorGroups && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    // (up) when the primary sidebar is on the left then focus next part
    "key": "alt+k",
    "command": "workbench.action.focusNextPart",
    "when": "config.workbench.sideBar.location == 'left'"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "alt+k",
    "command": "cursorUp",
    "when": "textInputFocus"
  },
  {
    // (up) [default] when panel is positioned on the bottom and the editor is focused then do not go up any further
    "key": "alt+k",
    "command": "noop",
    "when": "panelPosition == 'bottom' && editorFocus"
  },
  {
    // (up) when the primary sidebar is on the left and the panel is focused then focus the active editor
    "key": "alt+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "panelPosition == 'bottom' && panelFocus"
  },
  {
    // (up) when a panel is visible and focus is in the last editor group then focus the last editor group
    "key": "alt+k",
    "command": "workbench.action.focusLastEditorGroup",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && activeEditorIsLastInGroup"
  },
  {
    // (up) when the primary sidebar is on the left and the primary sidebar is focused then go to the secondary sidebar
    "key": "alt+k",
    "command": "workbench.action.focusAuxiliaryBar",
    "when": "config.workbench.sideBar.location == 'left' && sideBarFocus && auxiliaryBarVisible"
  },
  {
    // (right) [placeholder] this is the 'when-sorted' beginning of the alt+l keybindings (no when clause)
    "key": "alt+l",
    //"command": "noop"
    "command": "alt+l and when? no and when! :)"
  },
  {
    // (right) [default] when the primary sidebar is on the left then go to the next part
    "key": "alt+l",
    "command": "workbench.action.focusNextPart",
    //"command": "alt+l workbench.action.focusNextPart 1",
    "when": "config.workbench.sideBar.location == 'left'"
  },
  {
    // (right) [default] when the editor is focused then go to the next editor
    "key": "alt+l",
    "command": "workbench.action.nextEditor",
    "when": "editorFocus"
  },
  {
    // (right) [default] when the panel is focused then go to the next panel view
    "key": "alt+l",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  {
    "key": "alt+l",
    "command": "cursorRight",
    "when": "textInputFocus"
  },
  {
    // (right) unknown
    "key": "alt+l",
    "command": "alt+l workbench.action.nextEditor 2 1",
    "when": "activeEditor == 'workbench.editor.keybindings' && editorFocus"
  },
  {
    // (right) when the primary sidebar is on the left and the primary sidebar is focused then go to the active editor
    "key": "alt+l",
    "command": "workbench.action.openEditorAtIndex1",
    //"command": "alt+l workbench.action.focusActiveEditorGroup 1",
    "when": "config.workbench.sideBar.location == 'left' && sideBarFocus && editorIsOpen"
  },
  {
    // (right) [default special case] when the editor is focused AND the panel is focused then go to the next panel view
    "key": "alt+l",
    "command": "workbench.action.nextPanelView",
    //"command": "alt+l workbench.action.nextEditor jjtjjjjjjjjjjjjjjjjj",
    "when": "editorFocus && focusedView != '' && panelFocus"
  },
  {
    // (right) [default special case] when the editor is focused AND the panel is focused then go to the next panel view
    "key": "alt+l",
    "command": "alt+l workbench.action.nextEditor jjt2",
    //"command": "workbench.action.nextEditor",
    "when": "editorFocus && focusedView == '' && panelFocus"
  },
  {
    "key": "alt+l",
    "command": "alt+l workbench.action.nextEditor 123",
    //"command": "workbench.action.nextEditor",
    "when": "editorFocus && panelFocus && terminalFocus"
  },
  {
    // (right) when the editor focus is on the first editor in the first group then go to the next editor
    "key": "alt+l",
    "command": "workbench.action.nextEditor",
    //"command": "alt+l workbench.action.nextEditor 2 3",
    "when": "!panelFocus && editorFocus && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    // (right) when the primary sidebar is on the left and focus is in the secondary sidebar then go to the primary sidebar
    "key": "alt+l",
    //"command": "noop",
    "command": "alt+l noop nowrap",
    "when": "config.workbench.sideBar.location == 'left' && auxiliaryBarFocus && sideBarVisible && !config.altKey.wrap"
  },
  {
    // (right) when the primary sidebar is on the left and focus is in the secondary sidebar then go to the primary sidebar
    "key": "alt+l",
    "command": "workbench.action.focusSideBar",
    //"command": "alt+l workbench.action.focusSideBar wrap",
    "when": "config.workbench.sideBar.location == 'left' && auxiliaryBarFocus && sideBarVisible && config.altKey.wrap"
  },
  {
    // (right)
    "key": "alt+l",
    "command": "workbench.action.terminal.focusNextPane",
    //"command": "alt+l workbench.action.terminal.focusNextPane 0",
    "when": "panelFocus && terminalFocus && terminalCount > 1 && terminalSplitPaneActive"
  },
  {
    // (right)
    "key": "alt+l",
    "command": "alt+l workbench.action.focusAuxiliaryBar 3",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && auxiliaryBarVisible && activeEditorGroupLast && multipleEditorGroups"
  },
  {
    "key": "alt+l",
    "command": "alt+l workbench.action.terminal.focusWhere? no aux bar is open",
    "when": "panelFocus && terminalFocus && !auxiliaryBarVisible && terminalCount == 1 && terminalGroupCount == 1"
  },
  {
    "key": "alt+l",
    "command": "alt+l workbench.action.terminal.focusWhere? aux bar is open",
    "when": "panelFocus && terminalFocus && auxiliaryBarVisible && terminalCount == 1 && terminalGroupCount == 1"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.nextPanelView",
    //"command": "workbench.action.focusAuxiliaryBar jj1",
    "when": "config.workbench.sideBar.location == 'left' && !editorFocus && panelFocus && auxiliaryBarVisible && !multipleEditorGroups && activeEditorIsLastInGroup"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.focusAuxiliaryBar",
    //"command": "workbench.action.focusAuxiliaryBar jj2",
    "when": "config.workbench.sideBar.location == 'left' && !panelFocus && editorFocus && auxiliaryBarVisible && !multipleEditorGroups && activeEditorIsLastInGroup"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.focusAuxiliaryBar jj4",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && panelFocus && !auxiliaryBarVisible && !multipleEditorGroups && activeEditorIsLastInGroup"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.nextPanelView",
    //"command": "workbench.action.focusNext jjjjjjjj",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && panelFocus && auxiliaryBarVisible && !multipleEditorGroups && activeEditorIsLastInGroup"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.nextEditor",
    //"command": "alt+l workbench.action.nextEditor jjt3",
    "when": "config.workbench.sideBar.location == 'left' && !auxiliaryBarFocus && !editorFocus && !panelFocus && !sideBarFocus && focusedView == '' && editorIsOpen"
  },
  {
    // (right)
    "key": "alt+l",
    "command": "alt+l workbench.action.focusAuxiliaryBar 1 nowrap",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && !auxiliaryBarVisible && sideBarVisible && !config.altKey.wrap && !multipleEditorGroups && activeEditorIsLastInGroup"
  },
  {
    // (right)
    "key": "alt+l",
    "command": "workbench.action.focusSideBar",
    //"command": "alt+l workbench.action.focusSideBar 1 wrap",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && !auxiliaryBarVisible && sideBarVisible && !multipleEditorGroups && activeEditorIsLastInGroup && config.altKey.wrap"
  },
  {
    // (left) when the primary sidebar is on the left then focus previous part
    "key": "alt+left",
    "command": "workbench.action.focusPreviousPart",
    "when": "config.workbench.sideBar.location == 'left'"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.previousEditor",
    "when": "activeEditor =~ '/^workbench.editor.settings/' && editorFocus"
  },
  {
    // (left) when the primary sidebar is on the left and focus is in the secondary sidebar then focus the active editor
    "key": "alt+left",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "config.workbench.sideBar.location == 'left' && auxiliaryBarFocus"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.previousEditor",
    "when": "config.workbench.sideBar.location == 'left' && activeEditor == 'workbench.editor.keybindings' && editorFocus"
  },
  {
    // (left) when the primary sidebar is on the left and the primary sidebar is focused then go to the secondary sidebar
    "key": "alt+left",
    "command": "workbench.action.focusAuxiliaryBar",
    "when": "config.workbench.sideBar.location == 'left' && sideBarFocus && auxiliaryBarVisible"
  },
  {
    // (left) when the primary sidebar is on the left, the Problems panel is focused, and the primary sidebar is visible then go to the primary sidebar
    "key": "alt+left",
    "command": "workbench.action.focusSideBar",
    "when": "config.workbench.sideBar.location == 'left' && panelFocus && sideBarVisible && activePanel == 'workbench.panel.markers'"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "panelFocus && terminalFocus && terminalCount > 1 && terminalSplitPaneActive"
  },
  {
    // (left) [top left]
    "key": "alt+left",
    "command": "workbench.action.focusSideBar",
    "when": "config.workbench.sideBar.location == 'left' && editorFocus && sideBarVisible && activeEditorGroupIndex == 1 && activeEditorIsFirstInGroup"
  },
  {
    "key": "alt+m",
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+n",
